<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <title></title>
  </head>
  <body>
    <div class="container">
      <hr>
      <div class="">
        <a class="btn btn-success" href="/user/add">添加</a>
      </div>
      <hr>

      <div class="bs-example" data-example-id="simple-table">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Age</th>
              <th>Like</th>
              <th>Other</th>
            </tr>
          </thead>
          <tbody>
              <% if (user) {%>
                <% user.forEach((ele,index) => { %>
                 <tr>
                    <th scope="row"><%=index+1%></th>
                    <td><%=ele.name%></td>
                    <td><%=ele.age%></td>
                    <td><%=ele.like%></td>
                    <td>
                      <a class="btn btn-info" href="/user/update?id=<%=ele.id%>">修改</a>
                      <a class="btn btn-danger" href="/user/Delete?id=<%=ele.id%>">删除</a>
                    </td>
                  </tr>
                <%})%>
               <%}%>
          </tbody>
        </table>
      </div>
    </div>



  </body>
</html>
